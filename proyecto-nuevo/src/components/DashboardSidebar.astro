---
import {
    LayoutDashboard,
    Wallet,
    PieChart,
    CreditCard,
    TrendingUp,
    LogOut,
    User,
    X,
} from "@lucide/astro";

const { currentPath } = Astro.props;

const menuItems = [
    { label: "Resumen", path: "/dashboard", icon: LayoutDashboard },
    { label: "Transacciones", path: "/transactions", icon: CreditCard },
    { label: "Presupuesto", path: "/budget", icon: PieChart },
    { label: "Inversiones", path: "/investments", icon: TrendingUp },
];
---

<aside
    id="dashboard-sidebar"
    class="fixed inset-y-0 left-0 z-50 w-64 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 transition-transform duration-300 transform -translate-x-full md:translate-x-0 md:static md:flex flex-col h-screen md:sticky md:top-0"
>
    <div
        class="flex items-center justify-between h-20 px-6 border-b border-gray-100 dark:border-gray-700"
    >
        <div class="flex items-center gap-3">
            <div class="bg-indigo-600 p-2 rounded-xl">
                <Wallet class="w-6 h-6 text-white" />
            </div>
            <span
                class="text-2xl font-bold text-gray-800 dark:text-white tracking-tight"
                >Contabilito</span
            >
        </div>
        <button
            id="close-sidebar-btn"
            class="md:hidden p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400"
        >
            <X class="w-6 h-6" />
        </button>
    </div>

    <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
        {
            menuItems.map((item) => {
                const isActive = currentPath === item.path;
                const activeClass = isActive
                    ? "text-indigo-600 bg-indigo-50 dark:bg-gray-700/50 dark:text-indigo-400"
                    : "text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700/50 hover:text-indigo-600 dark:hover:text-indigo-400";

                return (
                    <a
                        href={item.path}
                        class={`flex items-center px-4 py-3 rounded-xl transition-colors group ${activeClass}`}
                    >
                        <item.icon class="w-5 h-5 mr-3 transition-transform group-hover:scale-110" />
                        <span class="font-medium">{item.label}</span>
                    </a>
                );
            })
        }

        <div class="pt-4 mt-4 border-t border-gray-100 dark:border-gray-700">
            <a
                href="/profile"
                class={`flex items-center px-4 py-3 rounded-xl transition-colors group ${currentPath === "/profile" ? "text-indigo-600 bg-indigo-50 dark:bg-gray-700/50 dark:text-indigo-400" : "text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700/50 hover:text-indigo-600 dark:hover:text-indigo-400"}`}
            >
                <User
                    class="w-5 h-5 mr-3 transition-transform group-hover:scale-110"
                />
                <span class="font-medium">Mi Perfil</span>
            </a>
        </div>
    </nav>

    <div class="p-4 border-t border-gray-100 dark:border-gray-700">
        <button
            id="logout-btn"
            class="flex items-center w-full px-4 py-3 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 rounded-xl transition-colors"
        >
            <LogOut class="w-5 h-5 mr-3" />
            <span class="font-medium">Cerrar Sesi√≥n</span>
        </button>
    </div>
</aside>
